module halfadder(a, b, sum, carry);
    input a, b;
    output sum, carry;
    assign sum = a ^ b;
    assign carry = a & b;
endmodule

module halfadder_tb;
    reg a, b;
    wire sum, carry;
    halfadder h1(a, b, sum, carry);

    initial begin
        $monitor(" A=%b B=%b Sum=%b Carry=%b", a, b, sum, carry);
        a = 0; b = 0;
        #1 b = 1;
        #1 a = 1;
        #1 b = 0;
    end
endmodule
